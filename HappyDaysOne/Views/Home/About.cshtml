@model IEnumerable<HappyDaysOne.ViewModels.TopActivity>

@{
    ViewBag.Title = "Top Activity in Age Group";
}
<h2>@ViewBag.Title.</h2>

<table>
    <tr>
        <th>
            Age Group
        </th>
        <th>
            Activity Name
        </th>
        <th>
            Activity Count
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AgeGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfActivity)
            </td>
            <td>
                @item.ActivityCount
            </td>
        </tr>
    }
</table>
